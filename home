// 기본 React + Tailwind 포트폴리오 템플릿
// 다크모드 + 섹션 구성 + 애니메이션 + 라우팅까지 포함

import { BrowserRouter as Router, Routes, Route, Link } from "react-router-dom";
import { useEffect, useState } from "react";
import { motion } from "framer-motion";

import "./index.css"; // Tailwind 포함됨

function App() {
  return (
    <div className="bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-100 min-h-screen">
      <Router>
        <Header />
        <Routes>
          <Route path="/" element={<Home />} />
          <Route path="/about" element={<About />} />
          <Route path="/projects" element={<Projects />} />
          <Route path="/contact" element={<Contact />} />
        </Routes>
        <Footer />
      </Router>
    </div>
  );
}

function Header() {
  const [dark, setDark] = useState(false);
  useEffect(() => {
    document.documentElement.classList.toggle("dark", dark);
  }, [dark]);

  return (
    <header className="flex justify-between items-center p-4 shadow-md">
      <h1 className="text-xl font-bold">HY Portfolio</h1>
      <nav className="space-x-4">
        <Link to="/">Home</Link>
        <Link to="/about">About</Link>
        <Link to="/projects">Projects</Link>
        <Link to="/contact">Contact</Link>
        <button
          onClick={() => setDark(!dark)}
          className="ml-4 p-1 px-2 border rounded"
        >
          {dark ? "☀️" : "🌙"}
        </button>
      </nav>
    </header>
  );
}

function Home() {
  return (
    <section className="p-8 text-center">
      <motion.h2
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8 }}
        className="text-4xl font-bold"
      >
        안녕하세요 👋 김형준입니다
      </motion.h2>
      <p className="mt-4 text-lg">프론트엔드 개발자 지망생의 포트폴리오</p>
    </section>
  );
}

function About() {
  return (
    <section className="p-8">
      <h2 className="text-2xl font-semibold mb-4">🙋‍♂️ About Me</h2>
      <p>React, JavaScript, Python을 좋아합니다. 문제 해결과 UI/UX에 관심이 많습니다.</p>
    </section>
  );
}

function Projects() {
  return (
    <section className="p-8">
      <h2 className="text-2xl font-semibold mb-4">🚀 Projects</h2>
      <ul className="space-y-4">
        <li className="p-4 border rounded shadow-md">
          <h3 className="font-bold">동네 대여 앱</h3>
          <p>Next.js + Firebase로 만든 물건 공유 앱</p>
        </li>
        <li className="p-4 border rounded shadow-md">
          <h3 className="font-bold">날씨 시각화</h3>
          <p>Python + Matplotlib + CSV 데이터 처리</p>
        </li>
      </ul>
    </section>
  );
}

function Contact() {
  return (
    <section className="p-8">
      <h2 className="text-2xl font-semibold mb-4">📬 Contact</h2>
      <p>Email: yourname@email.com</p>
      <p>GitHub: <a href="https://github.com/yourusername" className="underline">yourusername</a></p>
    </section>
  );
}

function Footer() {
  return (
    <footer className="p-4 text-center border-t mt-8">
      <p>© 2025 Kim Portfolio | Powered by React + GitHub Pages</p>
    </footer>
  );
}

export default App;
